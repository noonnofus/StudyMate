@model (string Username, string Role)

<nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top">
    <div class="container">
        <a class="navbar-brand" asp-controller="Home" asp-action="Index">SkillMate</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                @if (!string.IsNullOrEmpty(Model.Username))
                {
                    <li class="nav-item">
                        <a asp-controller="Profile" asp-action="Index" class="nav-link">Profile (@Model.Username)</a>
                    </li>
                    @if (Model.Role == "Admin")
                    {
                        <li class="nav-item">
                            <a asp-controller="Admin" asp-action="Dashboard" class="nav-link">Admin Dashboard</a>
                        </li>
                    }
                    <li class="nav-item">
                        <form asp-controller="Login" asp-action="Logout" method="post" class="d-inline">
                            <button type="submit" class="btn btn-link nav-link">Logout</button>
                        </form>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a asp-controller="Login" asp-action="Index" class="nav-link">Login</a>
                    </li>
                }
            </ul>
        </div>
    </div>
</nav>


