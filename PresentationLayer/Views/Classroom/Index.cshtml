@model PresentationLayer.ViewModel.ClassroomViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "All available rooms here!";
}

<div class="mt-5 pt-2">
    <h1>Available rooms</h1>
</div>

<div class="mt-4">
    <table class="table shadow rounded p-3">
        <thead>
            <tr>
                <th scope="col">Class Name</th>
                <th scope="col">Type</th>
                <th scope="col">Total students</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var room in Model.Rooms)
            {
                <tr>
                    <th scope="row">@room.ClassName</th>
                    <td>@room.Type</td>
                    <td>@(room.ClassroomUsers?.Count() ?? 0)</td>
                    <td>
                        <a asp-action="Index" asp-controller="ClassroomDetail" asp-route-id="@room.Id" class="btn btn-primary btn-block btn-lg">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
